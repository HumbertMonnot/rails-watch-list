<div class="container margin-under-navbar p-5">

  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :comment %>
    <%= f.association :movie, input_html: { class: 'select2' } %>

    <%= f.button :submit, "Soumettre", class: "btn-outline-primary" %>
    <%= link_to "Cancel", list_path(@list), class: "btn-outline-secondary" %>
  <% end %>

</div>