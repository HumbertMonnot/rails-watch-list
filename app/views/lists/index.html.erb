<div class="banner mt-5" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)),
   url(https://s3-us-west-2.amazonaws.com/prd-rteditorial/wp-content/uploads/2018/03/13153742/RT_300EssentialMovies_700X250.jpg);">
  <div class="container">
    <h1>My lists of <strong>movies</strong> !</h1>
    <p>See all my lists of movies.</p>
    <%# <a class="btn btn-flat" href="#">Apply now</a> %>
  </div>
</div>

<div class="container">
  <div class="ctr d-flex flex-wrap">
      <% @lists.each do |list| %>
        <% if list.poster.attached? %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
              url('<%= cl_image_path list.poster.key, height: 300, crop: :fill %>')">
        <% else %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
              url(https://www.benefsnet.com/images/cms/film.gif)">
        <% end %>
            <%= link_to list.name.capitalize,  list_path(list)%>
          </div>
      <% end %>
  </div>
</div>